{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",

  "productName": "GestiónCCJT",
  "version": "0.1.0",
  "identifier": "com.tajo.gestionccjt",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "vite build --mode production"  
  },

  "app": {
    "windows": [
      { "title": "Gestión", "width": 800, "height": 600, "resizable": true }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
